    <body>
    <%- include('../partials/header.ejs') %>

    <div class="container">
        <div class="sidebarNew"></div>
        <div class="registration">
          <h1>New Venue</h1>
                <form action="/venues" method="POST">
                    <fieldset class="account-info">
                        <legend>Venue Information</legend>
